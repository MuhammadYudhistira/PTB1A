<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="90dp"
        android:onClick="onButtonLogoutClicked"
        android:text="Logout"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountEmail" />

    <Button
        android:id="@+id/buttonChangePassword"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:onClick="onButtonChangePasswordClicked"
        android:text="Ganti Password"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@+id/accountEmail"
        app:layout_constraintTop_toBottomOf="@+id/accountEmail" />

    <Button
        android:id="@+id/buttonUpdateProfile"
        android:layout_width="155dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:onClick="onButtonUpdateProfilClicked"
        android:text="Update Profil"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toStartOf="@+id/accountEmail"
        app:layout_constraintTop_toBottomOf="@+id/accountEmail" />

    <TextView
        android:id="@+id/accountEmail"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:text="nurharzeki@gmail.com"
        app:layout_constraintEnd_toEndOf="@+id/accountUsername"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/accountUsername"
        app:layout_constraintTop_toBottomOf="@+id/accountUsername" />

    <TextView
        android:id="@+id/accountUsername"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:text="nurharzeki"
        app:layout_constraintEnd_toEndOf="@+id/accountName"
        app:layout_constraintStart_toStartOf="@+id/accountName"
        app:layout_constraintTop_toBottomOf="@+id/accountName" />

    <TextView
        android:id="@+id/accountName"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:text="Harriko Nur Harzeki"
        app:layout_constraintEnd_toEndOf="@+id/logoAccount"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="@+id/logoAccount"
        app:layout_constraintTop_toBottomOf="@+id/logoAccount" />

    <ImageView
        android:id="@+id/logoAccount"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/account_circle_logo" />
</androidx.constraintlayout.widget.ConstraintLayout>